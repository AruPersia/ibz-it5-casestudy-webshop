{% extends '@Backend/backend.base.html.twig' %}

{% block title %}Join us{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4 ws-panel">
                <div class="ws-content">
                    <h5>Login</h5>
                    {{ form_start(loginForm, {'action': path('backendLoginSignIn')}) }}

                    <div class="form-group row">
                        <div class="col-xs-12">
                            {{ form_row(loginForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-12">
                            {{ form_row(loginForm.password, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="text-lg-right">
                        {{ form_row(loginForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_row(loginForm._token) }}
                    {{ form_end(loginForm) }}
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>

{% endblock %}