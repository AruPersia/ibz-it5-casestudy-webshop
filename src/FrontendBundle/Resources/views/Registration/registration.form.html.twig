{% extends 'base.html.twig' %}

{% block title %}Join us{% endblock %}

{% block body %}

    {{ form_start(registrationForm, {'action': path('frontendRegistrationSubmitForm')}) }}
    <div class="form-group row">
        <div class="col-xs-12">
            {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12">
            {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12">
            {{ form_row(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12">
            {{ form_row(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    {{ form_row(registrationForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_row(registrationForm._token) }}
    {{ form_end(registrationForm) }}

{% endblock %}