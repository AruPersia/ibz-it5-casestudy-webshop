<div class="container container-fluid ws-shopping-cart">
    {% if shoppingCart is defined and shoppingCart.hasItems %}
        {% for item in shoppingCart.items %}
            <div id="product-{{ item.id }}" class="row ws-shopping-cart-row">
                <div class="col-md-3">
                    <img src="{{ asset('images/noProduct.png') }}" width="80px">
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-9">{{ item.name }}</div>
                        <div class="col-md-3 text-md-right"><i class="fa fa-trash-o text-danger"></i></div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">{% embed '@Frontend/shopping.cart.quantity.html.twig' %}{% endembed %}</div>
                        <div class="col-md-3 text-md-right ws-shopping-cart-sum">{{ item.sum }}.-</div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row font-weight-bold text-right ws-shopping-cart-row">
            <div class="col-md-8 offset-md-1">Total</div>
            <div class="col-md-3 text-md-right">{{ shoppingCart.sum }}.-</div>
        </div>
        <div class="row">
            <div class="col-md-12 text-md-right">
                <div>&nbsp;</div>
                <button class="btn btn-primary">Go to checkout</button>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12">
                Click on <i class="fa fa-cart-arrow-down fa-2x"></i> icon next to item to add to cart.
            </div>
        </div>
    {% endif %}
</div>